{
  "manifest_version": 2,
  "name": "Nocturne",
  "version": "0.1.0",

  "description":  "Fine-grained privacy control for Firefox.",
  "homepage_url": "https://github.com/xavierholt/nocturne",

  "icons": {
    "16":  "img/icon-16.png",
    "32":  "img/icon-32.png",
    "48":  "img/icon-48.png",
    "96":  "img/icon-96.png",
    "128": "img/icon-128.png"
  },

  "permissions": [
    "http://*/",
    "https://*/",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": [
      "ext/browser-0.1.1.js",
      "src/lib.min.js",
      "src/app.min.js"
    ]
  },

  "options_ui": {
    "page": "src/gui/settings.html",
    "open_in_tab": true
  }
}
