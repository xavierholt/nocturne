{
  "manifest_version": 2,
  "name": "Nocturne",
  "version": "0.1.0",

  "description":  "Fine-grained privacy control for Firefox.",
  "homepage_url": "https://github.com/xavierholt/nocturne",

  "permissions": [
    "http://*/",
    "https://*/",
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": [
      "src/ext/chrome.js",
      "src/app/main.js"
    ]
  },

  "options_ui": {
    "page": "src/gui/settings.html",
    "open_in_tab": true
  }
}
