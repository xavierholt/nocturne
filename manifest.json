{
  "manifest_version": 2,
  "name": "Nocturne",
  "version": "0.0",

  "description":  "Fine-grained privacy control for Firefox.",
  "homepage_url": "https://github.com/xavierholt/nocturne",

  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs"
  ],

  "background": {
    "scripts": [
      "lib/cache.js",
      "lib/rules.js",
      "lib/types.js",
      "lib/main.js"
    ]
  },

  // "applications": {
  //   "gecko": {
  //     "id": "nocturne@mozilla.org"
  //   }
  // },

  "options_ui": {
    "page": "gui/settings.html"
  }
}
